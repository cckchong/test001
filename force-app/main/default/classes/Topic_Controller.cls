    return [SELECT Priority__c, Customer_Name__c, Link__c FROM Customers_List__c WHERE Priority__c <= 15 ORDER BY Priority__c ASC];
}
public List<Customers_List__c> getRisingStar_List() {
    return [SELECT Priority__c, Customer_Name__c, Link__c FROM Customers_List__c WHERE Priority__c > 15 AND Priority__c <= 17 ORDER BY Priority__c ASC];
}
public List<Customers_List__c> getSupplier_List() {
    return [SELECT Priority__c, Customer_Name__c, Link__c FROM Customers_List__c WHERE Priority__c > 17 AND Priority__c <= 31 ORDER BY Priority__c ASC];
}
public List<Customers_List__c> getInnovation_List() {
    return [SELECT Priority__c, Customer_Name__c, Link__c FROM Customers_List__c WHERE Priority__c > 31 ORDER BY Priority__c ASC];
}
